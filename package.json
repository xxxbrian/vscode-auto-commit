{
  "publisher": "xxxbrian",
  "name": "vscode-auto-commit",
  "displayName": "vscode-auto-commit",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "",
  "author": "Bojin Li <hi@bojin.li>",
  "license": "MIT",
  "homepage": "https://github.com/xxxbrian/vscode-auto-commit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/xxxbrian/vscode-auto-commit"
  },
  "bugs": {
    "url": "https://github.com/xxxbrian/vscode-auto-commit/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "auto-commit.generateCommitMessage",
        "title": "Generate Commit Message"
      },
      {
        "command": "auto-commit.openSettings",
        "title": "Open Auto-Commit Settings"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "auto-commit",
      "properties": {
        "auto-commit.apiKey": {
          "type": "string",
          "description": "API key for auto-commit"
        },
        "auto-commit.baseUrl": {
          "type": "string",
          "description": "Base URL for auto-commit"
        },
        "auto-commit.model": {
          "type": "string",
          "description": "Model for auto-commit"
        },
        "auto-commit.prompt": {
          "type": "string",
          "description": "Prompt for auto-commit"
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "auto-commit.generateCommitMessage",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "openai": "^4.89.0",
    "pnpm": "^10.4.1",
    "reactive-vscode": "^0.2.10",
    "simple-git": "^3.27.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
